<div class="container-product">
  <h1>Lista de Productos</h1>

  <div class="container">


    {{#each products}}
    <div class="card text-center mb-3" style="width: 18rem;">
      <div class="card-body" scope="row">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{descripcion}}</p>
        <p class="card-text">{{code}}</p>
        <p class="card-text">{{stock}}</p>
        <p class="card-text">{{price}}</p>
        <button class="btn btn-sm btn-success addToCart" data-product-id="{{_id}}">Agregar al carrito</button>
      </div>
    </div>
    {{/each}}


  <div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="cartModalLabel">Cart</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div id="cartItemsContainer"></div>
        </div>
      </div>
    </div>
  </div>


  </div>








  <div class="row mt-4">
    <div class="col-lg-12">
      <nav class="d-flex justify-content-end">
        <ul class="pagination">
          {{#if prevLink}}
          <li class="page-item">
            <a class="page-link" href="{{prevLink}}">Prev</a>
          </li>
          {{else}}
          <li class="page-item disabled">
            <span class="page-link">Prev</span>
          </li>
          {{/if}}
          <li class="page-item">
            <span class="page-link">Pag. {{pag}} of {{totalPages}}</span>
          </li>
          {{#if nextLink}}
          <li class="page-item">
            <a class="page-link" href="{{nextLink}}">Next</a>
          </li>
          {{else}}
          <li class="page-item disabled">
            <span class="page-link">Next</span>
          </li>
          {{/if}}
        </ul>
      </nav>
    </div>
  </div>
</div>


<script src='/socket.io/socket.io.js'></script>
<script src="/js/cart.js"></script>